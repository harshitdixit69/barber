<body>
    <div class="container" style="margin-top: 70px;">
        <div class="row">
            <%- include("header") %>
        </div>
        <h1 class="text-center" style="font-weight: bold;">Check Availability</h1>
        <form action="/getservice   " method="post">
            <div class="form-group">
                <label for="exampleInputEmail1" style="font-weight: bold;">Name</label>
                <select name="name" onchange="check();check2()" class="form-control" id="name">
                    <option>None</option>
                    <option>Hair Cutting</option>
                    <option>Manicure</option>
                    <option>Pedicure</option>
                </select>
                <small id="emailHelp" class="form-text text-muted">According to the name of the service Venue is
                    automatically selected.</small>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1" style="font-weight: bold;">Venue</label>
                <input class="form-control" min="1" max="3" onchange="check2()" name="venue" type="number" id="venue"
                    readonly>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect1" style="font-weight: bold;">Staff</label>
                <small id="emailHelp" class="form-text text-muted">There are only two Staff for every venue like
                    for venue 3 1and 2 staff is available.</small>
                <input type="text" class="form-control" id="staff" name="staff" aria-describedby="emailHelp"
                    placeholder="Enter email">

            </div>

            <div class="form-group row">
                <label for="example-date-input" class="col-2 col-form-label" style="font-weight: bold;">Date</label>
                <div class="col-10">
                    <input class="form-control" name="date" type="date" value="2011-08-19" id="date">
                </div>
            </div>
            <input class="btn btn-primary" type="submit" value="submit">
        </form>
    </div>
    <%- include("footer")%>
        <script>
            function valid() {
                var cal = document.getElementById('venue').value;
                if (cal == '1') {

                }
            }
            function check() {
                var val = document.getElementById('name').value;
                if (val == 'Hair Cutting') {
                    document.getElementById('venue').value = 3;
                } else if (val == 'Manicure') {
                    document.getElementById('venue').value = 1;
                } else if (val == 'Pedicure') {
                    document.getElementById('venue').value = 2;
                } else {
                    alert('Staff not available')
                }
            }
            function check2() {
                var cal = document.getElementById('venue').value;
                if (cal == '1') {
                    document.getElementById('staff').value = 5;
                } else if (cal == '2') {
                    document.getElementById('staff').value = 3;
                } else if (cal == '3') {
                    document.getElementById('staff').value = 1;
                }
            }
        </script>
